                android:layout_gravity="bottom"
                android:layout_marginTop="5dip"
                android:background="@drawable/upgrade_bg_btn"
                android:text="去提升"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>