<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scroll_book_bg"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/w_fill_h_wrap"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <!-- 金币 -->

        <LinearLayout
            android:id="@+id/attr1"
            style="@style/wrap_content"
            android:background="@drawable/txt_bg2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="2dip"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/icon"
                style="@style/wrap_content" />

            <TextView
                android:id="@+id/name"
                style="@style/color4_12" />

            <TextView
                android:id="@+id/value"
                style="@style/color4_12"
                android:layout_marginLeft="1dip" />
        </LinearLayout>

        <TextView
            style="@style/wrap_content"
            android:layout_weight="1" />

        <!-- 元宝 -->

        <LinearLayout
            android:id="@+id/attr2"
            style="@style/wrap_content"
            android:layout_marginRight="8dip"
            android:background="@drawable/txt_bg2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="2dip"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/icon"
                style="@style/wrap_content" />

            <TextView
                android:id="@+id/name"
                style="@style/color4_12" />

            <TextView
                android:id="@+id/value"
                style="@style/color4_12"
                android:layout_marginLeft="1dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/w_fill_h_wrap"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/attr3"
            style="@style/wrap_content"
            android:background="@drawable/txt_bg2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="2dip"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/icon"
                style="@style/wrap_content" />

            <TextView
                android:id="@+id/name"
                style="@style/color4_12" />

            <TextView
                android:id="@+id/value"
                style="@style/color4_12"
                android:layout_marginLeft="1dip" />
        </LinearLayout>

        <TextView
            style="@style/wrap_content"
            android:layout_weight="1" />

        <!-- 兵力 -->

        <LinearLayout
            android:id="@+id/attr4"
            style="@style/wrap_content"
            android:layout_marginRight="8dip"
            android:background="@drawable/txt_bg2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="2dip"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/icon"
                style="@style/wrap_content" />

            <TextView
                android:id="@+id/name"
                style="@style/color4_12" />

            <TextView
                android:id="@+id/value"
                style="@style/color4_12"
                android:layout_marginLeft="1dip" />
        </LinearLayout>
    </LinearLayout>

    <!-- 材料 -->

    <LinearLayout
        android:id="@+id/materialGroup"
        style="@style/w_fill_h_wrap"
        android:layout_height="16dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="2dip"
        android:background="@drawable/material_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/woodLayout"
            style="@style/wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon"
                style="@style/wrap_content" />

            <TextView
                android:id="@+id/name"
                style="@style/color4_11" />

            <TextView
                android:id="@+id/value"
                style="@style/color4_11"
                android:layout_marginLeft="1dip" />
        </LinearLayout>

        <TextView
            style="@style/wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ironLayout"
            style="@style/wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon"
                style="@style/wrap_content" />

            <TextView
                android:id="@+id/name"
                style="@style/color4_11" />

            <TextView
                android:id="@+id/value"
                style="@style/color4_11"
                android:layout_marginLeft="1dip" />
        </LinearLayout>

        <TextView
            style="@style/wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/leatherLayout"
            style="@style/wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon"
                style="@style/wrap_content" />

            <TextView
                android:id="@+id/name"
                style="@style/color4_11" />

            <TextView
                android:id="@+id/value"
                style="@style/color4_11"
                android:layout_marginLeft="1dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>