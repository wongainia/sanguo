<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iconLayout"
    android:layout_width="60.6dip"
    android:layout_height="60.6dip"
    android:layout_gravity="center_vertical" >

    <ImageView
        android:id="@+id/icon"
        style="@style/wrap_content"
        android:layout_gravity="center" />

    <FrameLayout
        android:id="@+id/numLayout"
        style="@style/wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="3dip"
        android:visibility="gone" 
         >

        <ImageView
            style="@style/wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/num_bg" />

        <TextView
            android:id="@+id/num"
            style="@style/color6_10"
            android:layout_gravity="center"
            android:text="NO.1" />
    </FrameLayout>

    <ImageView
        android:id="@+id/user_outline_bg"
        style="@style/wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/user_icon_bg" />

    
     <FrameLayout
        android:id="@+id/rankTopLayout"
        style="@style/wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:visibility="gone" 
         >

        <ImageView
            style="@style/wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/num_top_rank_bg" />

        <TextView
            android:id="@+id/rankTopNum"
            style="@style/color6_10"
            android:layout_gravity="center"
            android:text="NO.111" />
    </FrameLayout>
</FrameLayout>