<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_parent"
    android:background="@drawable/common_list_bg" >

    <LinearLayout
        style="@style/fill_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            style="@style/color16_14"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/custom_dialog_title_bg2"
            android:text="玩家ID" />

        <EditText
            android:id="@+id/userID"
            style="@style/custom_dialog_edit"
            android:layout_width="260dip"
            android:layout_marginTop="10dip"
            android:hint="点击输入玩家游戏ID"
            android:numeric="integer"
            android:singleLine="true"
            android:textColor="@color/color6"
            android:textColorHint="@color/color2" />

        <TextView
            style="@style/color16_14"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/custom_dialog_title_bg2"
            android:text="玩家昵称" />

        <EditText
            android:id="@+id/name"
            style="@style/custom_dialog_edit"
            android:layout_width="260dip"
            android:layout_marginTop="10dip"
            android:hint="点击输入玩家游戏昵称"
            android:singleLine="true"
            android:textColor="@color/color6"
            android:textColorHint="@color/color2" />

        <TextView
            style="@style/color16_14"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/custom_dialog_title_bg2"
            android:text="玩家性别" />

        <LinearLayout
            style="@style/w_fill_h_wrap"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/defaultLayout"
                style="@style/wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <FrameLayout
                    style="@style/wrap_content"
                    android:background="@drawable/unchecked" >

                    <ImageView
                        android:id="@+id/checked"
                        style="@style/wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/checked" />
                </FrameLayout>

                <TextView
                    style="@style/color7_13"
                    android:text="不限" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/maleLayout"
                style="@style/wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <FrameLayout
                    style="@style/wrap_content"
                    android:layout_marginLeft="1dip"
                    android:background="@drawable/unchecked" >

                    <ImageView
                        android:id="@+id/checked"
                        style="@style/wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/checked" />
                </FrameLayout>

                <TextView
                    style="@style/color7_13"
                    android:text="男" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/femaleLayout"
                style="@style/wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <FrameLayout
                    style="@style/wrap_content"
                    android:layout_marginLeft="1dip"
                    android:background="@drawable/unchecked" >

                    <ImageView
                        android:id="@+id/checked"
                        style="@style/wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/checked" />
                </FrameLayout>

                <TextView
                    style="@style/color7_13"
                    android:text="女" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/wrap_content"
            android:layout_weight="2" />

        <TextView
            style="@style/wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</ScrollView>